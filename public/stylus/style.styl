// COLOUR VARIABLES
charcoal = #303030
grey = #dfdfdf
white = #fafafa
pure-white = #fff

blue = #245d76
cyan = #38609c
green = #388150
magenta = #bb4aa4
orange = #c35d3c
purple = #6c3196
red = #c32c44
yellow = #cd9d41

shadow_black = #777
dark_yellow = darken(yellow, 10)

// SCREEN VARIABLES
small_screen = 767px
medium_screen = 979px
large_screen = 1199px

// MIXINS-----------------------------------------------
button(bg-color, c)
    background: bg-color
    color: c

    &:hover
        background: lighten(bg-color, 10)

    &:active
        background: darken(bg-color, 5)
        color: grey
        box-shadow: inset 3px 0 5px shadow-black
        -webkit-text-shadow: 1px 1px 0px darken(bg-color, 10)
        -moz-text-shadow: 1px 1px 0px darken(bg-color, 10)
        -ms-text-shadow: 1px 1px 0px darken(bg-color, 10)
        -o-text-shadow: 1px 1px 0px darken(bg-color, 10)
        text-shadow: 1px 1px 0px darken(bg-color, 10)

transition(time, prop, ease="ease-in-out")
    -webkit-transition: time prop ease
    -moz-transition: time prop ease
    -ms-transition: time prop ease
    -o-transition: time prop ease
    transition: time prop ease

